MAIL_TO="<your_email_address>"
MAIL_SUBJECT="Command execution completed"

COMMAND=$*

START_TIME=$(date '+%Y-%m-%d %H:%M:%S')

$COMMAND
EXIT_CODE=$?

END_TIME=$(date '+%Y-%m-%d %H:%M:%S')

MAIL_BODY=$(cat <<EOF
Subject: $MAIL_SUBJECT


Command     : $COMMAND
Return code : $EXIT_CODE

From    : $START_TIME
To      : $END_TIME   

EOF
)

echo "$MAIL_BODY" |  msmtp "$MAIL_TO"